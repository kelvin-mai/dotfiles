{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "graphql",
    "html",
    "yaml",
    "json",
    "python",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "reason",
    "clojure",
    "go"
  ],
  "coc.preferences.extensionUpdateCheck": "daily",
  // explorer
  "explorer": {
    "file.showHiddenFiles": true,
    "icon.enableNerdfont": true,
    "previewAction.onHover": false,
    "keyMappings.global": {
      "D": "deleteForever",
      "v": "open:vsplit",
      "t": "open:tab"
    }
  },
  // custom language servers
  "languageserver": {
    // clojure
    "clojure-lsp": {
      "command": "bash",
      "args": ["-c", "clojure-lsp"],
      "filetypes": ["clojure"],
      "rootPatterns": ["project.clj", "deps.edn"],
      "additionalSchemes": ["jar", "zipfile"],
      "trace.server": "verbose",
      "initializationOptions": {
        "ignore-classpath-directories": true
      }
    },
    // terraform
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  // golang
  "go.goplsOptions": {
    "gofumpt": true
  },
  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  // javascript and typescript config
  "tsserver.enable": true,
  "tsserver.enableJavascript": true,
  // set postgresql as default sql
  "sql.database": "postgresql"
}
