{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "graphql",
    "html",
    "yaml",
    "json",
    "python",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "reason"
  ],
  // clojure config
  "diagnostic-languageserver.linters": {
    "clj_kondo_lint": {
      "command": "clj-kondo",
      "debounce": 100,
      "args": ["--lint", "%filepath"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "clj-kondo",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
        {
          "line": 1,
          "column": 2,
          "message": 4,
          "security": 3
        }
      ],
      "securities": {
        "error": "error",
        "warning": "warning",
        "note": "info"
      }
    }
  },
  "diagnostic-languageserver.filetypes": { "clojure": "clj_kondo_lint" },
  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  // javascript and typescript config
  "tsserver.enable": true,
  "tsserver.enableJavascript": true
}
